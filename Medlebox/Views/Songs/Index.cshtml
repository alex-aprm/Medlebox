@model IEnumerable<Medlebox.Models.Song>
@{
    ViewBag.Title = "Песни";
}

<h2>Песни</h2>
<div id="SongSearchModal" data-modal="Wrapper">

@using (Html.BeginForm("Index", "Songs", FormMethod.Get, new { @class = "form-search " ,@id="songsearchform"}))
{
     <div class="input-append span12 pad">
	@Html.TextBox("q")
  <button type="submit" class="btn btn-primary" data-refresh="songslist">Найти</button>
      </div>
}
<div id="songslist">
    @if (Model.Count()>0)
    {
<table class="table table-hover">
    @foreach(Medlebox.Models.Song s in Model)
    {
    <tr>
        <td><a  data-select="" data-value="@s.Gid" data-mutiple="true" data-select-hide="tr" href="@Url.Action("Edit","Songs", new {id=s.Gid })" >@Html.DisplayFor(m=>s)</a></td>
    </tr>
    }
</table>
    }

</div>
</div>