@model Medlebox.Models.Song

@Html.HiddenFor(m=>m.Gid)

<div class="control-group">
			<label class="control-label">Исполнитель</label>
			<div class="controls">@Html.TextBoxFor(model => model.Artist, new { @class = "span5" })  @Html.ValidationMessageFor(model => model.Artist)</div>
		</div>
<div class="control-group">
			<label class="control-label">Название</label>
			<div class="controls">@Html.TextBoxFor(model => model.Title, new { @class = "span5" })  @Html.ValidationMessageFor(model => model.Title)</div>
		</div>


<script type="text/javascript">
    $('#Artist').typeahead({
        name: '',
        remote: '/api/songsAPI/getallartists?q=%QUERY',
        limit: 10,
        updater: function (selection) {
            alert("TEST");
            return selection;
        }
    });

    $('#Title').typeahead({
        name: '',
        remote: '/api/songsAPI/getallsongsbyartist?artist='+$('#Artist').attr('value')+'&q=%QUERY',
        limit: 10
    });

</script>