@{
    ViewBag.Title = "Вход";
    ViewBag.Splash = true;
}
@model Medlebox.Models.User
<div style="position:absolute;bottom:50%; left:20%;"><img alt="Medlebox" src="/Content/images/stroke.png"/></div>
<div style="position:absolute;top:50%;height:50%;background-color:#46074f;left:0px;width:100%;" ></div>

<div style="position:absolute;bottom:50%; left:50%;">
@using (Html.BeginForm("Login", "Users", new { ReturnUrl = Request.Params["ReturnUrl"] }, FormMethod.Post, new { @class = "form-inline" }))
{
		@Html.TextBoxFor(model => model.Email, new { @class = "span5", placeholder = "Почта" })
		@:&nbsp;@Html.PasswordFor(model => model.Password, new { @class = "span5", placeholder = "Пароль" })
	    @:&nbsp;<input type="submit" value="Вход"class=" btn btn-primary" /> 
}
</div>		
<div style="position:absolute;top:50%; left:50%;padding-top:15px;">
    @Html.ValidationMessageFor(model => model, "", new { style = "color:white;" })
    <a href="@Url.Action("Signin")" class="white" >Новый пользователь?</a>
</div>
