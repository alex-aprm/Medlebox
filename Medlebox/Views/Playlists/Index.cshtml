@model IEnumerable<Medlebox.Models.Playlist>

@{
    ViewBag.Title = "Index";
}

<h2>Плейлисты</h2>
<table class="table table-hover">
    @foreach (Medlebox.Models.Playlist p in Model)
    {
    <tr>
        <td style="width:10px"><i class="icon-play"></i></td>
        <td><a href="@Url.Action("Songs", "Playlists", new { id = p.Gid })">@Html.DisplayFor(m=>p.Name)</a></td>
        <td style="width:32px"><a href="@Url.Action("Edit", "Playlists", new { id = p.Gid })"><i class="icon-pencil"></i></a>
                             <a href="@Url.Action("Delete", "Playlists", new { id = p.Gid })"><i class="icon-remove"></i></a></td>
    </tr>
    }
    <tr>
        <td></td>
        <td>    <i class="icon-plus"></i> <a href="@Url.Action("Edit", "Playlists", new { id = Guid.NewGuid() })">Добавить новый</a>
</td>
        <td></td>
    </tr>
</table>


@section Annotation  {
<h4>Создавайте списки воспроизведения.</h4>
    <p>Создайт новый список, добавьте музыку. Для праздника или для души.</p>
<h4>Делитесь с друзьями.</h4>
     <p>Скопируйте ссылку на список, предоставьте доступ друзьям. Они смогут слушать то же, что и вы, либо изменить.</p>
}
@{ViewBag.Annotation = true;}